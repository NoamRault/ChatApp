<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/pref_display_title">
        <ListPreference
            app:defaultValue="auto"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="@string/pref_theme_title"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/pref_about_title">
        <PreferenceScreen
            app:key="version"
            app:summary="@string/app_version"
            app:title="@string/pref_app_version_title" />
    </PreferenceCategory>

</PreferenceScreen>