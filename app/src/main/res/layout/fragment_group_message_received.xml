<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="16dp">

    <ImageView
        android:id="@+id/fragment_group_message_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/editbox_background"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/fragment_group_message_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/fragment_group_message_background"
        app:layout_constraintStart_toStartOf="@+id/fragment_group_message_background" />

    <TextView
        android:id="@+id/fragment_group_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fragment_group_message_background"
        android:layout_alignBottom="@+id/fragment_group_message_background"
        app:layout_constraintStart_toStartOf="@+id/fragment_group_message_background"
        app:layout_constraintTop_toTopOf="@+id/fragment_group_message_background" />

    <TextView
        android:id="@+id/fragment_group_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@+id/fragment_group_message_background"
        app:layout_constraintTop_toBottomOf="@+id/fragment_group_message_background" />

</androidx.constraintlayout.widget.ConstraintLayout>